<section id="room_confirmation">
    <%- include('room_confirmation_modal.ejs')%>
        <center>
            <br>
            <div class="container">
                <div class="border p-3 rounded-3 shadow" style="max-width: 800px;">
                    <h1 class="text-center">ยืนยันห้องพัก</h1>
                </div>
            </div>
            <br>
            <br>
            <div class="table-responsive" style="max-height: 100vh;">
                <table class="table table-striped table-hover text-center">
                    <thead>
                        <tr>
                            <th scope="col">ลำดับที่</th>
                            <th scope="col">ห้องที่</th>
                            <th scope="col">วันเข้าพัก</th>
                            <th scope="col">วันเช็คเอาท์</th>
                            <th scope="col">เพิ่มเติม</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(i=0;i<unconfirm_room.length;i++){ %>

                            <tr>
                                <td scope="row ">
                                    <%= i %>
                                </td>
                                <td>
                                    <%= unconfirm_room[i].num_room %>
                                </td>
                                <td>
                                    <%= unconfirm_room[i].checkin %>
                                </td>
                                <td>
                                    <%= unconfirm_room[i].checkout %>
                                </td>
                                <td>
                                    <button type="button" class="btn btn-secondary" onclick="openModal(<%= unconfirm_room[i].id %>)">
                                                เพิ่มเติม
                                            </button>
                                </td>
                            </tr>
                            <%}%>
                    </tbody>
                </table>
            </div>
        </center>

        <script>
            function openModal(id) {

                var modal = new bootstrap.Modal(document.getElementById('confirmModal'));
                modal.show();
            }
        </script>


</section>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>checkout</title>
</head>
<link rel="stylesheet" href="main.css">
<script src="bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.4/dist/sweetalert2.all.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.4/dist/sweetalert2.min.css" />
<link rel="stylesheet" href="/modal_css/modal.css">

<tbody>
    <%- include('./sidenav/sidenav.ejs') %>

        <!-- your code here -->
        <center>
            <br>
            <div class="container">
                <div class="border p-3 rounded-3 shadow" style="max-width: 800px;">
                    <h1 class="text-center">เช็คเอาท์</h1>
                </div>
            </div>
            <br>
            <br>
            <div class="container">
                <div class="table-responsive" style="max-height: 100vh;">
                    <table class="table table-striped table-hover text-center">
                        <thead>
                            <tr>
                                <th scope="col">ลำดับที่</th>
                                <th scope="col">ห้องที่</th>
                                <th scope="col">วันเข้าพัก</th>
                                <th scope="col">วันเช็คเอาท์</th>
                                <th scope="col">สถานะ</th>
                                <th scope="col">เพิ่มเติม</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (stay.length===0) { %>
                                <tr>
                                    <td colspan="6">
                                        <h2>ยังไม่มีการเช็คเอาท์</h2>
                                    </td>
                                </tr>
                                <% } else { %>
                                    <% for (var i=0; i < stay.length; i++) { %>
                                        <tr>
                                            <td scope="row">
                                                <%= i %>
                                            </td>
                                            <td>
                                                <%= stay[i].num_room %>
                                            </td>
                                            <td>
                                                <%= stay[i].checkin %>
                                            </td>
                                            <td>
                                                <%= stay[i].checkout %>
                                            </td>
                                            <td>
                                                <% if ( stay[i].status==1) { %>
                                                    เข้าพักอยู่
                                                    <%}else if (stay[i].status==2) {%>
                                                        รอตรวจสอบ
                                                        <%}else if (stay[i].status==3) {%>
                                                            ตรวจสอบแล้ว
                                                            <%}%>
                                            </td>
                                            <td>
                                                <button type="button" class="btn btn-secondary" onclick="openModal('checkout_more_info'),show_checkout_more_info('<%= JSON.stringify(stay[i]) %>');">
                                                    เพิ่มเติม
                                                </button>
                                            </td>
                                        </tr>
                                        <% } %>
                                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal fade" id="checkout_more_info" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-content-fit">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h3 class="modal-title" id="exampleModalLabel">ข้อมูลเพิ่มเติม</h3>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <h4>ข้อมูลลูกค้า</h4>
                            <div class="table-responsive">
                                <table class="table modal-table">
                                    <tr>
                                        <td class="align-middle">
                                            <label for="checkout_cus_id">รหัสลูกค้า</label>
                                        </td>
                                        <td class="align-middle">
                                            <input type="text" name="checkout_cus_id" id="checkout_cus_id" readonly>
                                        </td>
                                        <td class="align-middle">
                                            <label for="checkout_f_name">ชื่อ-นามสกุล</label>
                                        </td>
                                        <td class="align-middle">
                                            <input type="text" name="checkout_f_name" id="checkout_f_name" readonly>
                                        </td>

                                    </tr>
                                    <tr>
                                        <td class="align-middle">
                                            <label for="checkout_p_num">เบอร์โทรติดต่อ</label>
                                        </td>
                                        <td class="align-middle">
                                            <input type="text" name="checkout_p_num" id="checkout_p_num" readonly>
                                        </td>
                                        <td class="align-middle">
                                            <label for="checkout_email">Email</label>
                                        </td>
                                        <td class="align-middle">
                                            <input type="text" name="checkout_email" id="checkout_email" readonly>
                                        </td>
                                    </tr>
                                </table>
                                <h4>ข้อมูลการจอง</h4>
                                <table class="table modal-table" id="checkout_data_table">
                                    <tr>
                                        <td class="align-middle">
                                            <label for="checkout_reserv_id">รหัสการจอง</label>
                                        </td>
                                        <td class="align-middle">
                                            <input type="text" name="checkout_reserv_id" id="checkout_reserv_id" readonly>
                                        </td>
                                        <td class="align-middle">
                                            <label for="checkout_room_number">เลขห้อง</label>
                                        </td>
                                        <td class="align-middle">
                                            <input type="text" name="checkout_room_number" id="checkout_room_number" readonly>
                                        </td>
                                        <td class="align-middle">
                                            <label for="checkout_room_type">ประเภทห้อง</label>
                                        </td>
                                        <td class="align-middle">
                                            <input type="text" name="checkout_room_type" id="checkout_room_type" readonly>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="align-middle">
                                            <label for="checkout_check_in">วันเข้าพัก</label>
                                        </td>
                                        <td class="align-middle">
                                            <input type="text" name="checkout_check_in" id="checkout_check_in" readonly>
                                        </td>
                                        <td class="align-middle">
                                            <label for="checkout_check_out">วันออก</label>
                                        </td>
                                        <td class="align-middle">
                                            <input type="text" name="checkout_check_out" id="checkout_check_out" readonly>
                                        </td>
                                        <td class="align-middle">
                                            <label for="checkout_check_out">สถานะ</label>
                                        </td>
                                        <td class="align-middle">
                                            <input type="text" name="checkout_status" id="checkout_status" readonly>
                                        </td>
                                    </tr>
                                </table>
                                <div id="more_info_section">
                                    <div class="form-floating" id='all_comment'>
                                        ประวัติลูกค้า
                                        <br>
                                        <table class="table" id="cus_comment_table"></table>
                                        <label for="message"></label>
                                        <br> ข้อมูลการตรวจสอบห้องพัก
                                        <br>
                                        <div class="container">
                                            <table class="table" id="room_comment_table">
                                                <thead>
                                                    <tr>
                                                        <td>ลำดับที่</td>
                                                        <td>รายละเอียด</td>
                                                        <td>วันที่</td>
                                                        <td>ห้องเลขที่</td>
                                                    </tr>
                                                </thead>
                                                <tbody>

                                                </tbody>
                                            </table>
                                        </div>
                                        <label for="message"></label>
                                    </div>
                                    <div class="form-floating">
                                        Comment เพิ่มเติม
                                        <br>
                                        <textarea class="form-control" placeholder="Enter your message here" id="more_cus_comment" rows="30"></textarea>
                                        <label for="message"></label>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer d-flex justify-content-center ">

                                <button class="btn btn-danger" id='checkout_btn'> เช็คเอาท์ </button>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ปิด</button>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </center>

        <script>
            function show_checkout_more_info(data) {
                var all_comment = document.getElementById("all_comment");
                all_comment.classList.remove('d-block')
                all_comment.classList.add('d-none')

                var data = JSON.parse(data);
                document.getElementById("checkout_cus_id").value = data.cus_id
                document.getElementById("checkout_f_name").value = data.f_name + " " + data.l_name
                document.getElementById("checkout_p_num").value = data.p_num
                document.getElementById("checkout_email").value = data.email
                document.getElementById("checkout_reserv_id").value = data.reserv_id
                document.getElementById("checkout_room_number").value = data.num_room
                document.getElementById("checkout_room_type").value = data.name_th + " " + data.bed
                document.getElementById("checkout_check_in").value = data.checkin
                document.getElementById("checkout_check_out").value = data.checkout
                document.getElementById("checkout_btn").value = data.reserv_id
                var status
                if (data.status == 1) {
                    status = 'เข้าพักอยู่'
                } else if (data.status == 2) {
                    status = 'รอตรวจสอบ'
                } else if (data.status == 3) {
                    status = 'ตรวจสอบเสร็จแล้ว'
                    all_comment.classList.remove('d-none')
                    all_comment.classList.add('d-block')

                    fetch("/get_comment", {
                        method: "post",
                        headers: {
                            Accept: "application/json",
                            "Content-Type": "application/json"
                        },
                        body: JSON.stringify({
                            num_room: data.num_room,
                            cus_id: data.cus_id
                        })
                    }).then((response) => response.json()).then((body) => {
                        // cus_comment_table
                        var room_coms = body.room_coms
                        console.log(room_coms);
                        var room_comment_tbody = document.getElementById('room_comment_table').getElementsByTagName('tbody')[0];
                        for (i = 0; i < room_coms.length; i++) {
                            var newRow = room_comment_tbody.insertRow();
                            var cell1 = newRow.insertCell(0);
                            var cell2 = newRow.insertCell(1);
                            var cell3 = newRow.insertCell(2);
                            var cell3 = newRow.insertCell(3);
                            cell1.innerHTML = i + 1;
                            cell2.innerHTML = room_coms[i].detail;
                            cell3.innerHTML = room_coms[i].date;
                            cell4.innerHTML = room_coms[i].room_number;
                        }
                        // console.log(body);
                    })

                } else if (data.status == 4) {
                    status = 'เช็คเอาท์แล้ว'
                }
                document.getElementById("checkout_status").value = status

                var btn = document.getElementById("checkout_btn")

                if (data.status == 1) {
                    btn.onclick = null
                    btn.disabled = false
                    btn.addEventListener('click', function() {
                        room_checking(btn.value);
                    });
                    btn.innerHTML = 'ตรวจสอบห้องพัก'

                } else if (data.status == 2) {
                    btn.onclick = null
                    btn.disabled = true
                    btn.innerHTML = 'รอแม่บ้านตรวจสอบห้องพัก'

                } else if (data.status == 3) {
                    btn.onclick = null
                    btn.disabled = false
                    btn.innerHTML = 'เช็คเอาท์'
                    btn.addEventListener('click', function() {
                        confirm_checkout(btn.value);
                    });
                }
            }

            function room_checking(id) {
                Swal.fire({
                    title: 'ต้องการให้แม่บ้านเข้าตรวจสอบห้องนี้?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    cancelButtonText: 'ยกเลิก',
                    confirmButtonText: 'ใช่ '
                }).then((result) => {
                    fetch("/room_checking", {
                        method: "post",
                        headers: {
                            Accept: "application/json",
                            "Content-Type": "application/json"
                        },
                        body: JSON.stringify({
                            id
                        })
                    }).then((response) => response.json()).then((body) => {
                        Swal.fire({
                            position: 'top',
                            icon: 'success',
                            title: 'ส่งข้อมูลให้แม่บ้านแล้ว',
                            showConfirmButton: false,
                            timer: 1500
                        }).then(() => {
                            changepage('/checkout');
                        });
                    })
                })
            }

            function confirm_checkout(id) {
                Swal.fire({
                    title: 'ต้องการเช็คเอาท์ห้องนี้',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    cancelButtonText: 'ยกเลิก',
                    confirmButtonText: 'ใช่ เริ่มทำความสะอาดเลย'
                }).then((result) => {
                    if (result.isConfirmed) {
                        var more_cus_comment = document.getElementById("more_cus_comment").value
                        var reserv_id = document.getElementById("checkout_reserv_id").value
                        fetch("/confirm_checkout", {
                            method: "post",
                            headers: {
                                Accept: "application/json",
                                "Content-Type": "application/json"
                            },
                            body: JSON.stringify({
                                id,
                                more_cus_comment,
                                reserv_id
                            })
                        }).then((response) => response.json()).then((body) => {
                            Swal.fire({
                                position: 'top',
                                icon: 'success',
                                title: 'บันทึกข้อมูลเรียบร้อยแล้ว',
                                showConfirmButton: false,
                                timer: 1500
                            }).then(() => {
                                changepage('/checkout');
                            });
                        })
                    }
                })
            }
        </script>





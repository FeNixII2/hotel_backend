        <script>
            function logout() {
                fetch('/logout', {
                        method: 'POST'
                    })
                    .then(response => {
                        if (response.ok) {
                            // Logout successful
                            // Clear the URL by replacing it with the root path
                            history.replaceState({}, '', '/');
                            location.href = '/'
                        } else {
                            // Logout failed
                            console.log('Logout failed');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                    });
            }
        </script>